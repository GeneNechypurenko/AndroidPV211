<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RatesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:text="@string/rates_tv_title"
        android:textColor="@color/rates_layout_bg"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rates_btn_pick_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/rates_layout_bg"
        android:gravity="center"
        android:text="@string/rates_btn_pick_date" />

    <TextView
        android:id="@+id/nbu_rate_exchangedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:textColor="@color/rates_layout_bg"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rates_rv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <SearchView
        android:id="@+id/rates_sv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_layout_fg" />

</LinearLayout>
